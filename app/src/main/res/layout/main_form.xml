<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <TableRow
            android:layout_marginTop="50dp"
            android:layout_weight="3">
            <Button
                android:id="@+id/overseasNews"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="해외시장뉴스"
                android:textSize="20sp"
                android:onClick="newsClick"/>
            <Button
                android:id="@+id/scamStory"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="무역사기사례"
                android:textSize="20sp"
                android:onClick="scamClick"/>
        </TableRow>
        <TableRow
            android:layout_weight="3">
            <Button
                android:id="@+id/successStory"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="기업성공사례"
                android:textSize="20sp"
                android:onClick="successClick"/>
            <Button
                android:id="@+id/nationInformation"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="국가정보"
                android:textSize="20sp"
                android:onClick="nationClick"/>
        </TableRow>
        <TableRow
            android:layout_weight="3">
            <Button
                android:id="@+id/productDB"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="상품 DB"
                android:textSize="20sp"
                android:onClick="productClick"/>
            <Button
                android:id="@+id/Favorites"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="즐겨찾기"
                android:textSize="20sp"
                android:onClick="FavoritesClick"/>
        </TableRow>
    </TableLayout>
</LinearLayout>